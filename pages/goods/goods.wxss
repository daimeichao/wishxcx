/* pages/goods/goods.wxss */.mainView{
	height: 100vh;
	width: 100%;

	overflow: hidden;
  }
  .book-list-wrap {
	background-color: #fafafa;
	overflow:auto;
	margin-top: 16rpx;
  }
  
  .book-list-wrap .book-list-title {
	position: relative;
	display: block;
	font-size: 28rpx;
	font-weight: 400;
	margin: 0 16rpx;
	padding: 14rpx 0;
	text-align: left;
	color: #000;
  }
  .book-list-wrap .book-list-title::after {
	content: '';
	position: absolute;
	display: block;
	width: 100%;
	height: 1rpx;
	bottom: 0;
	-webkit-transform: scaleY(.5);
	-ms-transform: scaleY(.5);
	transform: scaleY(.5);
	-webkit-transform-origin: 0 100%;
	-ms-transform-origin: 0 100%;
	transform-origin: 0 100%;
	pointer-events: none;
	left: 0;
	right: 0;
	background-color: #e5e5e5;
  }
  
  .book-list-wrap .b-tags {
	float: left;
	list-style: none;
	padding: 40rpx 16rpx;
  }
  
  .book-list-wrap .b-tags .b-tags-name {
	float: left;
	display: block;
	margin-right: 8rpx;
	width: 120rpx;
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	font-size: 28rpx;
	border: 1rpx solid #e5e5e5;
	border-radius: 40rpx;
  }
  
  .book-list-wrap .b-view-more {
	height: 44rpx;
	line-height: 44rpx;
	font-size: 28rpx;
	color: #666;
  }