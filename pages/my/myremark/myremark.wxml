    <view wx:for="{{news_list}}" wx:key="key" class="ovh w96ml2" style="height:57vw;float:left;margin-top:3vw;font-size: 3.2vw;padding: 2vw;position: relative;background-color: rgba(255, 255, 255, 1) ;border-radius: 5px;">

      <view bindtap="toXmDetail" data-xmid="{{item.pid}}" data-item="{{item}}" style="margin-top: 2vw;">

        <view>
