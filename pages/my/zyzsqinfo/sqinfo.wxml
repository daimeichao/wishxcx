<view class="mainView">
  <view style="padding-left:5vw;padding-top:10vw;position:relative">

  <image src="../../img/ywqd.png" style="height:150rpx;width:300rpx;"></image>
  </view>


  <view class="detailView">

      <view style="height: 10vw;width: 50%;">
		<view class="itemLeft" style="vertical-align:top">
      <image src="../../../img/ring.png" style="height:20rpx;width:20rpx;vertical-align:middle;"></image>
      <p style="margin-left:2vw;">头像</p>
      </view>
	
		<image  src="{{detail.tx}}" style="border-radius: 50%;float: left;width: 80%;margin-left:35vw;margin-top: 1vw;" mode="widthFix"></image>
      </view>

    <view class="viewItem"> 
      <view class="itemLeft">
      <image src="../../../img/ring.png" style="height:20rpx;width:20rpx;vertical-align:middle;"></image>
      <p style="margin-left:1vw;padding-top:10px">申请人</p>
      </view>
      <view class="itemRight">
      <p style="margin-left:1vw;padding-top:10px">{{detail.zyzname}}</p>
      </view>

   
    </view>



    <view style="height:1px;width:100%;background-color:rgba(245, 245, 245, 1)"></view>

    <view class="viewItem"> 
      <view class="itemLeft" style="vertical-align:top">
      <image src="../../../img/ring.png" style="height:20rpx;width:20rpx;vertical-align:middle;"></image>
      <p style="margin-left:1vw;">申请时间</p>
      </view>
      <view class="itemRight" style="text-align:right;vertical-align:top;line-height:6vw;padding-top:3vw;">
      <p style="margin-left:1vw;word-wrap:break-word;word-break:break-all;overflow: hidden;">{{detail.sq_time}}</p>
      </view>



      
   
    </view>
    <view style="height:1px;width:100%;background-color:rgba(245, 245, 245, 1)"></view>


    <view class="viewItem"> 
      <view class="itemLeft" style="vertical-align:top">
      <image src="../../../img/ring.png" style="height:20rpx;width:20rpx;vertical-align:middle;"></image>
      <p style="margin-left:1vw;">申请原因</p>
      </view>
      <view class="itemRight" style="text-align:right;vertical-align:top;line-height:6vw;padding-top:3vw;">
      <p style="margin-left:1vw;word-wrap:break-word;word-break:break-all;overflow: hidden;">{{detail.reason}}</p>
      </view>

   
    </view>
    <view style="height:1px;width:100%;background-color:rgba(245, 245, 245, 1)"></view>

  
  </view>


</view>